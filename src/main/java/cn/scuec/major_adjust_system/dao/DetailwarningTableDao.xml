<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.scuec.major_adjust_system.dao.DetailwarningTableDao">
  
  <select id="getWarningMajorByYear" resultType="cn.scuec.major_adjust_system.model.DetailwarningTable">
  		SELECT * FROM `detailwarning_table` WHERE `warning_year` like CONCAT(#{year},'%') 
  </select>
  
  <select id="getWarningMajorByMajorCode" resultType="cn.scuec.major_adjust_system.model.DetailwarningTable">
  		SELECT * FROM `detailwarning_table` WHERE `major_code`=#{majorCode}
  </select>
  
  <select id="getcauseMajorCode" resultType="java.lang.String">
  		SELECT `major_code` FROM `detailwarning_table` GROUP BY `major_code` HAVING COUNT(`major_code`) >2
  </select>
  
  <select id="getAll" resultType="cn.scuec.major_adjust_system.model.DetailwarningTable">
  		select * from detailwarning_table
  </select>
  
  <delete id="deleteByYearAndMajorCode">
  		DELETE FROM `detailwarning_table` WHERE `warning_year`=#{year} AND `major_code`=#{majorCode}
  </delete>
  
</mapper>